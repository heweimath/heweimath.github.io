    <script>
        // 邮箱显示功能
        const emailBtn = document.getElementById('show-email-btn');
        const emailDisplay = document.getElementById('email-display');
        const emailText = document.getElementById('email-text');
        const copyEmailBtn = document.getElementById('copy-email-btn');
        const emailSuccess = document.getElementById('email-success');
        
        // 将邮箱地址拆分成多个部分，增加爬虫抓取难度
        const emailParts = [
            'hewei0714',
            '@',
            'xjtu',
            '.',
            'edu',
            '.',
            'cn'
        ];
        
        // 组合邮箱地址
        function getEmail() {
            return emailParts.join('');
        }
        
        // 显示邮箱
        emailBtn.addEventListener('click', function() {
            emailText.textContent = getEmail();
            emailBtn.classList.add('hidden');
            emailDisplay.classList.remove('hidden');
        });
        
        // 复制邮箱到剪贴板
        copyEmailBtn.addEventListener('click', function() {
            const email = getEmail();
            navigator.clipboard.writeText(email).then(function() {
                // 显示成功消息
                emailSuccess.classList.add('show');
                setTimeout(function() {
                    emailSuccess.classList.remove('show');
                }, 2000);
            });
        });
        
        // 中英文切换功能
        document.getElementById('btn-cn').addEventListener('click', function() {
            setLanguage('cn');
        });
        
        document.getElementById('btn-en').addEventListener('click', function() {
            setLanguage('en');
        });
        
        function setLanguage(lang) {
            // 切换按钮状态
            document.getElementById('btn-cn').classList.toggle('active', lang === 'cn');
            document.getElementById('btn-en').classList.toggle('active', lang === 'en');
            
            // 根据语言切换内容
            if (lang === 'cn') {
                document.getElementById('name').textContent = '何伟 (Wei He)';
                document.getElementById('position').textContent = '助理教授 | 西安交通大学数学与统计学院';
                document.getElementById('about-title').textContent = '关于我';
                document.getElementById('about-content').textContent = '我的研究兴趣在于数论，特别是 算术几何 和 L-函数。';
                document.getElementById('education-title').textContent = '教育、工作背景';
                document.getElementById('education-list').innerHTML = `
                    <li><strong>2024-2025</strong>, 特任副研究员, 中国科学技术大学</li>
                    <li><strong>2021-2024</strong>, 博士后, 清华大学丘成桐数学科学中心/北京雁栖湖应用数学研究院</li>
                    <li><strong>2015-2020</strong>, 数学博士, 中科院数学与系统科学研究院 (导师: 田野)</li>
                    <li><strong>2011-2015</strong>, 数学学士, 南开大学</li>
                `;
                document.getElementById('pub-title').textContent = '论文与预印本';
                // 切换论文列表
                document.getElementById('publications-cn').classList.remove('hidden');
                document.getElementById('publications-en').classList.add('hidden');
                document.getElementById('teaching-title').textContent = '教学';
                // 切换教学列表
                document.getElementById('teaching-item-cn').classList.remove('hidden');
                document.getElementById('teaching-item-en').classList.add('hidden');
                
                // 更新联系信息标签
                document.getElementById('email-label').textContent = '邮箱';
                document.getElementById('address-label').textContent = '地址';
                document.getElementById('office-label').textContent = '办公室';
                document.getElementById('office-text').textContent = '数学楼 214';
                
                // 更新邮箱按钮文本
                emailBtn.textContent = '点击显示邮箱';
                emailSuccess.textContent = '已复制到剪贴板';
            } else {
                document.getElementById('name').textContent = 'Wei He';
                document.getElementById('position').textContent = 'Assistant Professor | School of Mathematics and Statistics, Xi\'an Jiaotong University';
                document.getElementById('about-title').textContent = 'About Me';
                document.getElementById('about-content').textContent = 'My research interests lie in Number Theory, particularly in arithmetic geometry and L-functions';
                document.getElementById('education-title').textContent = 'Education and Work Experience';
                document.getElementById('education-list').innerHTML = `
                     <li><strong>2024-2025</strong>, Associate Research Fellow, University of Science and Technology of China</li>
                    <li><strong>2021-2024</strong>, Postdoctoral Fellow, Yau Mathematical Sciences Center, Tsinghua University / Beijing Yanqi Lake Applied Mathematics Research Institute</li>
                    <li><strong>2015-2020</strong>, Ph.D. in Pure Mathematics, Academy of Mathematics and Systems Science, Chinese Academy of Sciences (Advisor: Ye Tian)</li>
                    <li><strong>2011-2015</strong>, B.S. in Mathematics, Nankai University</li>
                `;
                document.getElementById('pub-title').textContent = 'Publications and Preprints';
                // 切换论文列表
                document.getElementById('publications-cn').classList.add('hidden');
                document.getElementById('publications-en').classList.remove('hidden');
                document.getElementById('teaching-title').textContent = 'Teaching';
                // 切换教学列表
                document.getElementById('teaching-item-en').classList.remove('hidden');
                document.getElementById('teaching-item-cn').classList.add('hidden');
                
                // 更新联系信息标签
                document.getElementById('email-label').textContent = 'Email';
                document.getElementById('address-label').textContent = 'Address';
                document.getElementById('office-label').textContent = 'Office';
                document.getElementById('office-text').textContent = 'Math Building 214';
                
                // 更新邮箱按钮文本
                emailBtn.textContent = 'Click to show email';
                emailSuccess.textContent = 'Copied to clipboard';
            }
            
            // 重置邮箱显示状态
            emailBtn.classList.remove('hidden');
            emailDisplay.classList.add('hidden');
            
            // 重新渲染数学公式
            if (typeof MathJax !== 'undefined') {
                MathJax.typesetPromise();
            }
        }
        
        // 照片上传功能
        document.getElementById('profile-photo').addEventListener('click', function() {
            const input = document.createElement('input');
            input.type = 'file';
            input.accept = 'image/*';
            input.onchange = function(e) {
                const file = e.target.files[0];
                if (file) {
                    const reader = new FileReader();
                    reader.onload = function(event) {
                        document.getElementById('profile-photo').src = event.target.result;
                    };
                    reader.readAsDataURL(file);
                }
            };
            input.click();
        });
        
        // 初始化页面为英文
        setLanguage('en');
    </script>
</body>
